<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical"
    android:padding="@dimen/linear_padding"
    tools:context="com.example.android.valantenospizza.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin"
            android:src="@drawable/pizza" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/string1"
            android:textColor="@color/blue"
            android:textSize="@dimen/bigSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="phone"
            android:drawableLeft="@drawable/delivery"
            android:gravity="center"
            android:linksClickable="true"
            android:padding="@dimen/text_padding"
            android:text="@string/string2"
            android:textColor="@color/green"
            android:textSize="@dimen/normalSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="map"
            android:drawableLeft="@drawable/location"
            android:gravity="center"
            android:linksClickable="true"
            android:padding="@dimen/text_padding"
            android:text="@string/string3"
            android:textColor="@color/green"
            android:textSize="@dimen/smallSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="email"
            android:drawableLeft="@drawable/mail"
            android:gravity="center"
            android:linksClickable="true"
            android:padding="@dimen/text_padding"
            android:text="@string/string4"
            android:textColor="@color/green"
            android:textSize="@dimen/normalSize" />
    </LinearLayout>
</LinearLayout>
